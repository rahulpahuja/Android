    android:id="@+id/tab_strip_view_pager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rahulpahuja.com.viewpagerandfragment.activity.ViewPagerTitleStripActivity">

    <android.support.v4.view.PagerTabStrip
